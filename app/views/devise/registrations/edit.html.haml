.row
  .mx-auto.col-10.col-md-8.col-lg-6
    %h2 Change Profile Details
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource

      = f.error_notification
      = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

      - if current_user.image.attached?
        = image_tag(current_user.image, class: "mw-100 rounded-circle mx-auto object-fit-cover", style: "height: 100px; width:100px;")
        %br/
      - else
      %br/

      = f.file_field :image
      %br/
      %br/

      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"
      %br/

      = f.text_field :name, class: "form-control", placeholder: "Name"
      %br/

      = f.text_field :surname, class: "form-control", placeholder: "Surname"
      %br/

      = f.text_field :address, class: "form-control", placeholder: "Address"
      %br/

      = f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Current Password"
      %br/

      = f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password(leave blank if you don't want to change it)"
      %br/

      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password Confirmation"
      %br/

      .actions
        = f.submit "Update", class: "btn btn-secondary"
        = link_to "Back", :back, class: "btn btn-secondary"
      %br/

    %h3 Cancel my account

    .border.px-4.py-3
      Unhappy?
      %br/
      %br/
      = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"
