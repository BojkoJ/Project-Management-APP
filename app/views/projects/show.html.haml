%p{style: "color: green"}= notice

%div.p-5.mb-4.bg-body-tertiary.rounded-3
  .container-fluid.py-5
    %h1.display-5.fw-bold
      = @project.nazev
    %br/
    %p.col-md-8.fs-4
      = @project.description
    = link_to "Edit this project", edit_project_path(@project), class: "btn btn-secondary"
    |
    = link_to "Back to projects", projects_path, class: "btn btn-dark"
    |
    = link_to 'Delete project', @project, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger"
