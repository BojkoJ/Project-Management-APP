#projects
  - if user_signed_in?
    %table.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th Name
          %th Date of creation
          %th Number of Tasks
          %th{:colspan => "2"}
      %tbody
        - @projects.each do |project|
          %tr
            %td.align-middle
              = link_to project.nazev, project_tasks_path(project)
            %td.align-middle
              = project.created_at
            %td.align-middle
              = project.tasks.count
            %td.text-center
              = link_to "Show", project, class: "btn btn-outline-info btn-sm"
            %td.text-center
              = link_to "Edit", edit_project_path(project), class: "btn btn-outline-primary btn-sm"
            %td.text-center
              = link_to 'Delete', project, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm"
    = link_to "New project", new_project_path, class: "btn btn-secondary"
