%p{ style: "color: green" }= notice

%h1 Tasks for #{@project.nazev}

#tasks
  - if user_signed_in?
    %table.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th Subject
          %th Description
          %th Status
          %th{:colspan => "2"}
      %tbody
        - @tasks.each do |task|
          %tr
            %td.align-middle= task.subject
            %td.align-middle= task.description
            %td.align-middle= task.status
            %td.text-center= link_to "Edit", edit_task_path(task), class: "btn btn-outline-primary btn-sm"
            %td.text-center= link_to 'Delete', task, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm"
    = link_to "New task", new_task_path, class: "btn btn-secondary"
