.div.p-5.mb-4.bg-body-tertiary.rounded-3
  .container-fluid.py-5
    %h1.display-5.fw-bold
      = "#{@user.name} #{@user.surname}"
    %br/
    %p.col-md-8.fs-4
      = "#{@user.email} | #{@user.address} |"
    = link_to "Edit this user", edit_user_path(@user), class: "btn btn-secondary"
    |
    = link_to "Back to users", users_path, class: "btn btn-dark"
    |
    = link_to 'Delete user', @user, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger"
